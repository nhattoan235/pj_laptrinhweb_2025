
@{
    ViewBag.Title = "Home Page";

}

<!-- Employee Dashboard Extension -->
<section id="employee-dashboard" class="section light-background">
    <div class="container-fluid" data-aos="fade-up">
        <div class="row">
            <!-- Sidebar Menu -->

            @Html.Partial("_SidebarNhanVien")

            <!-- Main Dashboard -->
            <div class="col-md-9 col-lg-10 p-4">

                

                <!-- 6. Hồ sơ cá nhân -->
                <div id="hoso" class="mb-5">
                    <div class="section-title text-center mb-4">
                        <h2>Hồ sơ cá nhân</h2>
                    </div>
                    <form class="w-75 mx-auto">
                        <div class="mb-3">
                            <label class="form-label">Họ tên</label>
                            <input type="text" class="form-control" value="Trần Minh Nhân" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mã nhân viên</label>
                            <input type="text" class="form-control" value="NV001" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ca làm việc</label>
                            <input type="text" class="form-control" value="Ca sáng (7h - 13h)">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Đổi mật khẩu</label>
                            <input type="password" class="form-control" placeholder="Nhập mật khẩu mới">
                        </div>
                        <button class="btn btn-primary">Lưu thay đổi</button>
                    </form>
                </div>

                

            </div>
        </div>
    </div>
</section>

<style>
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
        background-color: #0d6efd;
        border-radius: 6px;
    }

    .table-box {
        transition: transform 0.2s;
        cursor: pointer;
    }

        .table-box:hover {
            transform: scale(1.1);
        }

    .section-title h2 {
        font-weight: 700;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh; /* Chiều cao bằng toàn màn hình */
        width: 220px; /* Đặt chiều rộng cố định */
        overflow-y: auto; /* Nếu danh sách dài có thể cuộn trong menu */
        background-color: #212529; /* Màu nền tối */
        padding: 20px;
        z-index: 1000; /* Đảm bảo nằm trên các thành phần khác */
    }

    /* Để phần nội dung chính không bị che */
    .col-md-9.col-lg-10.p-4 {
        margin-left: 220px;
    }

    /* Giữ hiệu ứng hover */
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
        background-color: #0d6efd;
        border-radius: 6px;
    }
</style>


